    <div id="schedule-output" style="margin-top: 25px;"></div>

    <button id="downloadBtn" onclick="downloadPDF()" style="display: none; margin-top: 20px; padding: 10px 20px; background-color: #78e08f; color: white; border: none; border-radius: 8px; cursor: pointer;">‚¨áÔ∏è T·∫£i PDF</button>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
  <script>
    function showSchedule() {
      const dobInput = document.getElementById("dob").value;
      if (!dobInput) {
        alert("Vui l√≤ng nh·∫≠p ng√†y sinh c·ªßa tr·∫ª.");
        return;
      }

      const dob = new Date(dobInput);
      const vaccines = [
        { name: "Vi√™m gan B m≈©i 1", days: 0 },
        { name: "BCG (lao)", days: 0 },
        { name: "Vi√™m gan B m≈©i 2", days: 30 },
        { name: "5 trong 1 m≈©i 1", days: 60 },
        { name: "5 trong 1 m≈©i 2", days: 90 },
        { name: "5 trong 1 m≈©i 3", days: 120 },
        { name: "Vi√™m gan B m≈©i 3", days: 150 },
        { name: "S·ªüi - Rubella", days: 270 },
        { name: "S·ªüi m≈©i 2", days: 365 },
      ];

      let output = `<div id="schedule-content"><h3 style="color:#e15f97;">üìã L·ªãch ti√™m d·ª± ki·∫øn:</h3><ul style="padding-left: 20px;">`;
      vaccines.forEach(vaccine => {
        const date = new Date(dob);
        date.setDate(date.getDate() + vaccine.days);
        output += `<li style="margin-bottom: 6px;"><strong>${vaccine.name}</strong>: ${date.toLocaleDateString()}</li>`;
      });
      output += "</ul></div>";

      document.getElementById("schedule-output").innerHTML = output;
      document.getElementById("downloadBtn").style.display = "inline-block";
    }

    function downloadPDF() {
      const element = document.getElementById("schedule-content");
      const opt = {
        margin: 0.5,
        filename: 'lich-tiem-chung.pdf',
        image: { type: 'jpeg', quality: 0.98 },
        html2canvas: { scale: 2 },
        jsPDF: { unit: 'in', format: 'a4', orientation: 'portrait' }
      };
      html2pdf().set(opt).from(element).save();
    }
  </script>
